@model IEnumerable<ConnectionString>

@{
    ViewData["Title"] = "Connection String";
}
<h1>Connection String</h1>

@using (Html.BeginForm())
{
    <div class="input-group">
        @Html.TextBox("SearchByName", null, new { @class = "form-control", @placeholder = "Search By Connection String Name ...."})
        <input type="submit" value="Search" class="btn btn-outline-success">
        <text> &nbsp; &nbsp; &nbsp;</text>
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Connection String Name","Index",new { SortField = "ConnectionStringName" ,currentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection})
            </th>
            <th>
                @Html.ActionLink("Connection String Initial Catalog","Index",new { SortField = "ConnectionStringInitialCatalog" ,currentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection})
            </th>
            <th>
                @Html.ActionLink("Connection String Data Source","Index",new { SortField = "ConnectionStringDataSource" ,currentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection})
            </th>
            <th>
                @Html.ActionLink("Connection String UserID","Index",new { SortField = "ConnectionStringUserID" ,currentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection})
            </th>
            <th>
                @Html.ActionLink("Connections","Index",new { SortField = "ConnectionsId" ,currentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection})
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.ConnectionStringName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.ConnectionStringInitialCatalog)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.ConnectionStringDataSource)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.ConnectionStringUserID)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.ConnectionsName)
            </td>
            <td>
                @Html.ActionLink("Edit","Edit",new {id = item.ConnectionStringID})
                @Html.ActionLink("Delete","Delete",new {id = item.ConnectionStringID}, new { onclick = "return confirm('Are you sure you want to delete this connection string?');"})
            </td>
        </tr>          
        }
    </tbody>
</table>

